@model CategoryListDtos

@{
    ViewData["Title"] = "Home Page";
    int count = 0;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Count</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var category in Model.Items)
        {
            count++;
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@count</td>
            </tr>
        }
    </tbody>
</table>
